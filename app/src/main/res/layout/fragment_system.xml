<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.FragmentSystem">

   <LinearLayout
       android:id="@+id/rate_line"
       android:layout_margin="@dimen/dp10"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:textSize="25sp"
           android:textStyle="bold"
           android:layout_width="340dp"
           android:layout_height="wrap_content"
           android:text="Settings" />
      <ImageView
          android:src="@drawable/ic_p"
          android:id="@+id/btn_ic_p"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>

   </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp30"
        android:layout_marginStart="@dimen/dp20"
        android:orientation="vertical"
        android:layout_below="@+id/rate_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="@dimen/dp20"
            android:id="@+id/rate_linear"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp30"
                android:textSize="20sp"
                android:text="Rate Us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp20"
            android:id="@+id/share_linear"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp30"
                android:textSize="20sp"
                android:text="Share with frined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp20"
            android:id="@+id/more_linear"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_more_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp30"
                android:text="More app"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp20"
            android:id="@+id/version_linear"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp30"
                android:textSize="20sp"
                android:text="Version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>